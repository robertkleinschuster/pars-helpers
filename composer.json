{
  "name": "pars/pars-helpers",
  "description": "",
  "license": "BSD-3-Clause",
  "keywords": [
    "pars"
  ],
  "support": {
    "docs": "https://docs.parsphp.org/pars-helpers/",
    "issues": "https://github.com/pars/pars-helpers/issues",
    "source": "https://github.com/pars/pars-helpers",
    "rss": "https://github.com/pars/pars-helpers/releases.atom",
    "forum": "https://discourse.parsphp.org/"
  },
  "require": {
    "php": "^7.4 || ^8.0",
    "pars/pars-beans": "@dev",
    "pars/pars-patterns": "@dev"
  },
  "require-dev": {
    "phpunit/phpunit": "^9.5"
  },
  "autoload": {
    "psr-4": {
      "Pars\\Helper\\": "src//"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "ParsTest\\Helper\\": "test/"
    }
  },
  "extra": {
  },
  "config": {
    "sort-packages": true,
    "optimize-autoloader": true,
    "classmap-authoritative": true
  },
  "scripts": {
    "cs-check": "phpcs",
    "cs-fix": "phpcbf",
    "test": "phpunit --colors=always",
    "test-coverage": "phpunit --colors=always --coverage-clover clover.xml"
  }
}
